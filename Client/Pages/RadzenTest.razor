@page "/RadzenTest"
@using Shared.Models

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Name</td>
                    <td>@forecast.Description</td>
                    <td>@forecast.Price</td>
                    <td>@forecast.Stock</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Product> forecasts = null;

    protected override async Task OnInitializedAsync()
    {
        forecasts = new List<Product>
        {
            new Product { Id = 1, Name = "Mock Product A", Price = 9.99m, Description = "Sample description", Stock = 10 },
            new Product { Id = 2, Name = "Mock Product B", Price = 19.99m, Description = "Another sample", Stock = 5 }
        };
    }
}