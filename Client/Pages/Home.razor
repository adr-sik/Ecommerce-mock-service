@page "/"

<!-- Banner is inside MainLayout.razor -->

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
@for (int i = 0; i < 100; i++)
{	
	<p>Counter: @res</p>
}
Welcome to your new app.

@code {
	private string res = "";
	protected override void OnInitialized()
	{
		for (int i = 0; i < 100; i++)
		{
			res += "Hello, world! " + i + "<br />";
		}
	}
}
